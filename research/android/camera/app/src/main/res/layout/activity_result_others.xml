<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recipe_background"
    tools:context=".ResultShow">

    <LinearLayout
        android:layout_width="278dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"

        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:visibility="visible">

        <ListView
            android:id="@+id/result_others_list"
            android:layout_width="wrap_content"
            android:layout_height="262dp"
            android:background="@android:color/transparent"></ListView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/all_wrong"
            android:textColor="@color/saswell_white"
            android:text="都不对？手动搜索"
            android:background="@drawable/camera_button_1"/>
    </LinearLayout>

</RelativeLayout>