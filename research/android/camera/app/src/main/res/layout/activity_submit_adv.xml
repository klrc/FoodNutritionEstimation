<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitAdv">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adv_title"
        android:text="请输入您的建议："
        android:textSize="30dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/adv_title"
        android:id="@+id/adv"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_submit_sure"
    android:layout_below="@+id/adv">
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adv"
        android:layout_marginTop="40dp"
        android:background="#f53434"
        android:text="提交"
        android:textColor="#ffffff" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/layout_submit_sure">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adv_back"
        android:text="返回"
        android:layout_below="@id/submit"
        android:background="#f53434"
        android:textColor="#ffffff"/>
</LinearLayout>


</android.widget.RelativeLayout>