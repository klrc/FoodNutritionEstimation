<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recipe_background"
    tools:context=".ResultShow">

    <LinearLayout
        android:layout_width="278dp"
        android:layout_height="400dp"
        android:background="@drawable/bg"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:id="@+id/result_name"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="识别结果：大猪蹄子"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-20dp"
            />
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="25dp"-->
            <!--android:layout_marginTop="-50dp"-->
            <!--android:id="@+id/result_vol_weight"-->
            <!--android:textSize="15dp"-->
            <!--android:text="食物体积：150ml\n大概500g"/>-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/result_divier"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-25dp"/>
        <TextView
            android:id="@+id/result_mat1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="碳水化合物"/>
        <TextView
            android:id="@+id/result_mat1_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-20dp"
            android:text="100kcal"/>
        <TextView
            android:id="@+id/result_mat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="蛋白质"/>
        <TextView
            android:id="@+id/result_mat2_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-20dp"
            android:text="100kcal"/>
        <TextView
            android:id="@+id/result_mat3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="脂肪"/>
        <TextView
            android:id="@+id/result_mat3_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-20dp"
            android:text="100kcal"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/result_divier"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/result_energy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="热量"/>
        <TextView
            android:id="@+id/result_energy_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-20dp"
            android:text="300kcal"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/result_check_icon"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/result_sure"/>

        <!--<Button-->
            <!--android:id="@+id/result_others"-->
            <!--android:layout_width="130dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@drawable/login_1_button"-->
            <!--android:text="查看其他识别结果"-->
            <!--android:textColor="@color/saswell_white" />-->

        <Button
            android:id="@+id/result_set_vol"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_1_button"
            android:text="输入精确重量"
            android:textColor="@color/saswell_white" />

    </LinearLayout>

</RelativeLayout>