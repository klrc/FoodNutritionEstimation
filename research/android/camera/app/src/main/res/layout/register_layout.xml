<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.camera.Register"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:weightSum="1">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/register_edit_name"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:hint="请输入用户名"
        android:inputType="textPersonName"
        android:ems="16"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/user_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:ems="16"
        android:hint="请输入体重（KG)"
        android:inputType="numberDecimal"
        android:layout_below ="@+id/register_edit_name" />

    <EditText
        android:id="@+id/user_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:ems="16"
        android:hint="请输入身高（CM）"
        android:inputType="numberDecimal"
        android:layout_below="@+id/user_weight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="257dp">

        <Spinner
            android:id="@+id/sex_choose"
            android:layout_width="250dp"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_day">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:id="@+id/child"
                android:text="儿童"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:id="@+id/adult"
                android:text="成人"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elder"
                android:text="老人"/>
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/sexual"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_day"
        android:layout_marginTop="10dp"
        android:layout_marginRight="120dp"
        android:ems="16"
        android:text="请选择你的性别:"
        android:textSize="20dp" />

    <!--<EditText-->
        <!--android:id="@+id/user_sex"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/register_btn_cancel"-->
        <!--android:layout_marginTop="117dp"-->
        <!--android:ems="16"-->
        <!--android:hint="请选择你的性别" />-->

    <EditText
        android:id="@+id/user_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_height"
        android:layout_marginTop="2dp"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:ems="16"
        android:inputType="numberDecimal"
        android:hint="年" />
    <EditText
        android:id="@+id/user_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_year"
        android:layout_marginTop="2dp"
        android:inputType="numberDecimal"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:ems="16"
        android:hint="月" />
    <EditText
        android:id="@+id/user_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_month"
        android:layout_marginTop="2dp"
        android:inputType="numberDecimal"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:ems="16"
        android:hint="日" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_reg_sure"
    android:layout_below="@+id/user_day"
    android:layout_marginTop="105dp">
    <Button
        android:id="@+id/register_btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="确认"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_reg_sure">
    <Button
        android:id="@+id/register_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f53434"
        android:text="取消"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />
    </LinearLayout>
</RelativeLayout>
