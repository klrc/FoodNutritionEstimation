<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.camera.Register"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:weightSum="1">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/register_edit_name"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:hint="请输入账号"
        android:inputType="textPersonName"
        android:ems="16"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/register_edit_pwd_old"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:ems="16"
        android:layout_below="@+id/register_edit_name"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/register_edit_pwd_new"
        android:ems="16"
        android:hint="请重新输入密码"
        android:inputType="textPassword"
        android:layout_below="@+id/register_edit_pwd_old"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_btn_sure"
        android:text="确认"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#373cbd"
        android:layout_below="@+id/register_edit_pwd_new"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_btn_cancel"
        android:text="取消"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#f53434"
        android:layout_below="@+id/register_btn_sure"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
